<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="5dp" android:top="10dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/textfieldBack"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/textfieldBack" android:startColor="@color/textfieldBack" />
                    <stroke android:width="1dp" android:color="@color/textfieldBack" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>